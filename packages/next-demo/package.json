{
  "name": "@hyperse-io/next-demo",
  "version": "1.0.4",
  "private": true,
  "type": "module",
  "scripts": {
    "generate": "yarn mergePrisma && prisma generate",
    "mergePrisma": "yarn node --import=@armit/path-alias/register ./prisma-merge.ts",
    "prisma-studio": "prisma studio",
    "db-seed": "prisma db seed",
    "db-reset": "prisma migrate dev reset",
    "dx:next": "run-s migrate-dev db-seed && next dev",
    "dx:prisma-studio": "yarn prisma-studio",
    "dx": "run-p dx:* --print-label",
    "dev": "yarn dx:next",
    "prebuild": "run-s generate migrate",
    "build": "next build",
    "build-docker": "cross-env NEXT_BUILD_ENV_OUTPUT=standalone next build",
    "start": "next start",
    "migrate-dev": "prisma migrate dev",
    "migrate": "prisma migrate deploy",
    "test": "yarn test-unit && yarn test-e2e",
    "test-unit": "vitest run",
    "test-e2e": "playwright test",
    "test-dev": "start-server-and-test dev http://127.0.0.1:3000 test",
    "test-start": "start-server-and-test start http://127.0.0.1:3000 test",
    "check-dist": "es-check -v",
    "clean": "rimraf --no-glob ./dist ./_release ./coverage ./tsconfig.tsbuildinfo",
    "check-size": "size-limit --highlight-less",
    "typecheck": "tsc --project ./tsconfig.json --noEmit",
    "fix-all-files": "eslint . --ext .ts,.tsx,.js,.jsx,.cjs,.mjs,.mdx,.graphql --fix",
    "next-lint": "next lint",
    "codegen": "graphql-codegen --config codegen.cjs",
    "lint": "eslint --cache --ext \".js,.ts,.tsx\" --report-unused-disable-directives --report-unused-disable-directives src",
    "build:twl": "twl -p \"**/globals.css\""
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@hookform/resolvers": "3.4.2",
    "@hyperse-io/next-auth": "workspace:*",
    "@hyperse-io/next-core": "workspace:*",
    "@hyperse-io/next-env": "workspace:*",
    "@hyperse-io/next-prisma": "workspace:*",
    "@next/bundle-analyzer": "14.2.3",
    "@prisma/client": "^5.14.0",
    "@tanstack/query-core": "^5.x",
    "@tanstack/react-query": "^5.37.1",
    "@trpc/client": "next",
    "@trpc/next": "next",
    "@trpc/react-query": "next",
    "@trpc/server": "next",
    "@urql/exchange-auth": "^2.2.0",
    "@urql/next": "1.1.1",
    "class-variance-authority": "0.7.0",
    "clsx": "^2.1.1",
    "dayjs": "1.11.11",
    "graphql": "16.8.1",
    "next": "^14.2.3",
    "next-intl": "^3.14.0",
    "next-runtime-env": "^3.2.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "7.51.5",
    "server-only": "0.0.1",
    "tailwind-merge": "^2.3.0",
    "urql": "4.1.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@armit/eslint-config-bases": "0.1.6",
    "@armit/path-alias": "0.0.19",
    "@changesets/cli": "2.27.3",
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "@graphql-codegen/add": "5.0.2",
    "@graphql-codegen/cli": "5.0.2",
    "@graphql-codegen/typescript": "4.0.7",
    "@graphql-codegen/typescript-operations": "4.2.1",
    "@hyperse-io/tailwind-layer": "^1.0.3",
    "@playwright/test": "^1.44.0",
    "@types/node": "^20.12.12",
    "@types/prettier": "3.0.0",
    "@types/react": "^18.3.2",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "^7.10.0",
    "autoprefixer": "^10.4.19",
    "commitizen": "4.3.0",
    "cross-env": "7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "dotenv": "^16.4.5",
    "es-check": "7.1.1",
    "eslint": "^8.55.0",
    "eslint-config-next": "^14.2.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-tailwindcss": "3.16.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "prisma": "^5.14.0",
    "size-limit": "11.1.4",
    "start-server-and-test": "^2.0.3",
    "tailwindcss": "^3.4.3",
    "tsx": "^4.10.5",
    "typescript": "^5.4.5",
    "vite": "^5.2.11",
    "vite-tsconfig-paths": "4.3.2",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=16.8"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
